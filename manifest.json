{
    "name": "Sorted Groups",
    "description": "Sets default sorting order when visiting Facebook groups",
    "version": "1.0.0",
    "manifest_version": 3,
    "homepage_url": "https://github.com/sutaC/sorted-groups",
    "permissions": ["storage"],
    "action": {
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://www.facebook.com/*"],
            "js": ["scripts/content.js"],
            "run_at": "document_start"
        }
    ],
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}
